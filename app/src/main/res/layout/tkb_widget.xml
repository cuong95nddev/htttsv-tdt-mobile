<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/layout"
        android:background="@drawable/cricle_bg_widget_tkb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/gradient_bg_widget_tile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="left">
                <TextView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/tvDaySelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text=""
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:layout_marginRight="8dp"/>
                <TextView
                    android:id="@+id/tvDateSelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:text="" />
            </LinearLayout>

            <ImageButton
                android:tint="@color/white"
                android:id="@+id/btnOpenCalendar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:background="@drawable/selector_light_theme"
                android:tintMode="src_in"
                android:src="@drawable/ic_calendar" />

            <ImageButton
                android:tint="@color/white"
                android:id="@+id/btnReload"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:background="@drawable/selector_light_theme"
                android:tintMode="src_in"
                android:src="@drawable/ic_autorenew_black_24dp" />

        </LinearLayout>

        <ListView
            android:id="@+id/listViewWidget"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>
</RelativeLayout>