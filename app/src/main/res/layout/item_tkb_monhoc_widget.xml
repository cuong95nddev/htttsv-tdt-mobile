<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="14dp"
            android:padding="8dp"
            android:background="@drawable/gradient_bg_widget_tkb">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tenMH_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="Phân tích thiết kế hệ thống thông tin" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            android:text="Mã MH" />

                        <TextView
                            android:id="@+id/maMH_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            android:text="000123" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="7"
                            android:text="Phòng"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/phong_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:text="E0406"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:textSize="15dp"
                                android:textColor="@color/white"
                                android:text="Nhóm" />

                            <TextView
                                android:id="@+id/nhom_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:textSize="15dp"
                                android:textColor="@color/white"
                                android:text="1" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:paddingTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            android:text="Tổ" />

                        <TextView
                            android:id="@+id/to_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            android:text="1" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="4dp"
           android:paddingRight="4dp"
           android:paddingTop="2dp"
           android:paddingBottom="2dp"
           android:background="@drawable/cricle_bg_widget_tkb_date">
           <TextView
               android:id="@+id/pos_text"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:layout_gravity="center"
               android:gravity="center"
               android:background="@drawable/circle_pos_tkb"
               android:textStyle="bold"
               android:textColor="@color/white"
               android:text="5" />

           <TextView
               android:layout_marginLeft="4dp"
               android:layout_marginRight="4dp"
               android:layout_gravity="center"
               android:id="@+id/time_start_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="16dp"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:text="10:20 am" />

           <TextView
               android:layout_marginRight="4dp"
               android:layout_marginLeft="4dp"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="-"
               android:textColor="@color/black" />

           <TextView
               android:layout_gravity="center"
               android:id="@+id/time_finish_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="11:00 am"
               android:textColor="@color/black" />
       </LinearLayout>

    </RelativeLayout>
</LinearLayout>
