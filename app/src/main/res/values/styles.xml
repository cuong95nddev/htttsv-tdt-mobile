<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>


    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:overlapAnchor" tools:targetApi="lollipop">true</item>
    </style>

    <!-- Thông báo -->
    <style name="new_title_thongbao">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/new_title_color</item>
    </style>

    <style name="title_thongbao">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="new_date_thongbao">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/new_date_color</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="date_thongbao">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/date_color</item>
        <item name="android:textSize">12dp</item>
    </style>

    <!-- Học phí -->
    <style name="hocphi_muc_title">
        <item name="android:textSize">15dp</item>
    </style>
    <style name="hocphi_chitiet_title">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="hocphi_chitiet_title_sub">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10dp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="hocphi_chitiet_money">
        <item name="android:gravity">right|center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#D47781</item>
        <item name="android:textSize">20dp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="hocphi_muc_money">
        <item name="android:gravity">right|center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#8DB253</item>
        <item name="android:textSize">20dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="hocphi_thanhtoan_title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="hocphi_thanhtoan_title_sub">
        <item name="android:textStyle">italic</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="hocphi_thanhtoan_money">
        <item name="android:gravity">right|center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">30dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
